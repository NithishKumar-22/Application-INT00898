@model Changes
@{
   Layout= "_UserLayout";
}
<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form style="width: 23;" method="post">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Change Password</h3>

            <div class="form-outline mb-4">
              <input asp-for="UserID" class="form-control form-control-lg" />
              <label asp-for="UserID" class="form-label" >Enter your User ID</label>
            </div>

            <div class="form-outline mb-4">
              <input asp-for="NewPassword" type="Password" class="form-control form-control-lg" />
              <label asp-for="NewPassword" class="form-label" >New Password</label>
            </div>
            
            <div class="form-outline mb-4">
              <input asp-for="ConfirmNewPassword" type="Password" class="form-control form-control-lg" />
              <label asp-for="ConfirmNewPassword" class="form-label" >Confirm New Password</label>
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit" asp-controller="Employee" asp-action="Index" >Enter</button>
            </div>
          </form>
        </div>
        
      </div>
    </div>  
  </div>
</section>